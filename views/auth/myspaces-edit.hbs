<form action="/myspaces-edit/{{places._id}}" method="POST" class="formOffer">
<h1>Edit your place</h1>
<br>
  <div class="form-group">
    <label for="exampleFormControlInput1">Name</label>
    <input value="{{places.name}}" name="name" type="name" class="form-control" id="exampleFormControlInput1">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea value="{{places.description}}" name="description" class="form-control" id="exampleFormControlTextarea1"
      rows="2"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Capacity</label>
    <select name="capacity" class="form-control" id="exampleFormControlSelect1" value="{{places.capacity}}">
      <option value="0.5">0.5m続</option>
      <option value="1">1m続</option>
      <option value="1.5">1.5m続</option>
      <option value="2">2m続</option>
    </select>
  </div>
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input value="{{places.address}}" name="address" type="text" class="form-control" id="inputAddress" placeholder="Rua, Avenida, Alameda"
      value="{{place.address}}">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Neighborhood</label>
    <input value="{{places.neighborhood}}" name="neighborhood" type="text" class="form-control" id="inputNeighborhood"
      placeholder="Jardim Paulista, Jardins">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input value="{{places.city}}" name="city" type="text" class="form-control" id="inputCity">
    </div>
    <div class="form-group col-md-4">
      <label for="inputState">State</label>
      <select id="inputState" class="form-control">
        <option selected>Choose...</option>
        <option>SP</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip">ZIP</label>
      <input value="{{places.zip}}" type="text" class="form-control" id="inputZip">
    </div>
  </div>
  <div class="form-group">
    <label for="priceInput">Price</label>
    <input value="{{places.price}}" name="price" type="price" class="form-control" id="priceInput" placeholder="50, 100, 150...">
  </div>
  <div class="form-check">
    <input name="available" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="true"
      checked>
    <label class="form-check-label" for="exampleRadios1">
      Available
    </label>
  </div>
  <div class="form-check">
    <input name="available" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2"
      value="false">
    <label class="form-check-label" for="exampleRadios2">
      Unavailable
    </label>
  </div>
  <br>
  <div class="col-auto my-1">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>